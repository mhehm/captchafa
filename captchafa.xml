<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="captcha" method="upgrade">
	<name>plg_captcha_captchafa</name>
	<version>2.0</version>
	<creationDate>May 2013</creationDate>
	<author>Mohammad Hasani Eghtedar</author>
	<authorEmail>m.h.eghtedar@gmail.com</authorEmail>
	<authorUrl>www.behineweb.com</authorUrl>
	<copyright>Copyright (C) 2013 - 2014 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<description>PLG_CAPTCHA_CAPTCHAFA_XML_DESCRIPTION</description>
	<files>
		<filename plugin="captchafa">captchafa.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_captcha_captchafa.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_captcha_captchafa.sys.ini</language>
		<language tag="fa-IR">fa-IR/fa-IR.plg_captcha_captchafa.ini</language>
		<language tag="fa-IR">fa-IR/fa-IR.plg_captcha_captchafa.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="public_key"
					type="text"
					label="PLG_CAPTCHAFA_PUBLIC_KEY_LABEL"
					description="PLG_CAPTCHAFA_PUBLIC_KEY_DESC"
					required="true"
					filter="string" />
				<field
					name="private_key"
					type="text"
					label="PLG_CAPTCHAFA_PRIVATE_KEY_LABEL"
					description="PLG_CAPTCHAFA_PRIVATE_KEY_DESC"
					required="true"
					filter="string" />
			</fieldset>
		</fields>
	</config>
</extension>
